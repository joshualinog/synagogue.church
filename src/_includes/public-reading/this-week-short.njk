
{% if nextReading %}
  <div>

  <div class="reading-container container flex flex-col md:flex-row gap-6">
      <div class="torah bg-white border-black border-2 rounded-2xl reading-short flex-1 flex items-stretch p-0 overflow-hidden relative min-h-[220px]">
        <figcaption class="absolute top-2 left-2 z-10 bg-yellow-300 text-black font-bold px-4 py-1 rounded-full border-2 border-black text-xs shadow">
          TORAH
        </figcaption>
        <figure class="self-stretch w-1/3 min-w-[90px] max-w-[160px] border-r-4 border-black flex-shrink-0">
          <img src="https://placehold.co/300x400/000000/FFFFFF?text= " alt="Reading" class="object-cover w-full h-full block" />
        </figure>
  <div class="flex-1 flex flex-col justify-start text-xs font-black pt-8 pb-4 min-w-0">
          <h4 class="pl-4">TORAH READING:</h4>
          <h3 class="text-2xl my-4 font-extralight pl-4">{{ nextReading.torahPassage }}</h3> 
          <small class="font-extralight font-italic pl-4"> This reading is from: <span class="uppercase">{{nextReading.torahTitle}} </span></small>
          <br>
          <div class="border-t-2 pt-4 border-black w-full">
           <span class="font-extralight inline-block pl-4">TOTAL NUMBER OF VERSES:</span> <span class="font-black text-lg ml-4 bg-yellow-300 py-1 px-5 inline-block border-2 border-black rounded-full">{{ nextReading.torahVerseTotal }}</span>
          </div>
        </div>
      </div>

        <div class="gospel bg-white border-black border-2 rounded-2xl reading-short flex-1 flex items-stretch p-0 overflow-hidden relative min-h-[220px]">
        <figcaption class="absolute top-2 left-2 z-10 bg-yellow-300 text-black font-bold px-4 py-1 rounded-full border-2 border-black text-xs shadow">
          GOSPEL
        </figcaption>
        <figure class="self-stretch w-1/3 min-w-[90px] max-w-[160px] border-r-4 border-black flex-shrink-0">
          <img src="https://placehold.co/300x400/000000/FFFFFF?text= " alt="Reading" class="object-cover w-full h-full block" />
        </figure>
  <div class="flex-1 flex flex-col justify-start text-xs font-black pt-8 pb-4 min-w-0">
          <h4 class="pl-4">GOSPEL READING:</h4>
          <h3 class="text-2xl my-4 font-extralight pl-4">{{ nextReading.gospelPassage }}</h3> 
          {% if nextReading.gospelTitle %}
            <small class="font-extralight font-italic pl-4"> This reading is from: <span class="uppercase">{{ nextReading.gospelTitle }}</span></small>
          {% endif %}
          <br>
          <div class="border-t-2 pt-4 border-black w-full">
           <span class="font-extralight inline-block pl-4">TOTAL NUMBER OF VERSES:</span> <span class="font-black text-lg ml-4 bg-yellow-300 py-1 px-5 inline-block border-2 border-black rounded-full">{{ nextReading.gospelVerseTotal }}</span>
          </div>
        </div>
      </div>
      
    </div>
  </div>
{% endif %}


