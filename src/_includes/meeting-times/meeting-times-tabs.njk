
<!-- component -->
<section class="bg-gray-50 font-sans w-full py-12 px-8">
    <div x-data="{ openTab: 3 }" class="py-8 w-full">
        <h2 class="text-8xl font-black mb-4">meeting times</h2>
        <div class="w-full">
            <div class="mb-4 flex space-x-4 p-2 bg-white rounded-lg shadow-md w-full">
                <button x-on:click="openTab = 1" :class="{ 'bg-blue-600 text-white': openTab === 1 }" class="flex-1 py-2 px-4 rounded-md focus:outline-none transition-all duration-300">Day</button>
                <button x-on:click="openTab = 2" :class="{ 'bg-blue-600 text-white': openTab === 2 }" class="flex-1 py-2 px-4 rounded-md focus:outline-none transition-all duration-300">Week</button>
                <button x-on:click="openTab = 3" :class="{ 'bg-blue-600 text-white': openTab === 3 }" class="flex-1 py-2 px-4 rounded-md focus:outline-none transition-all duration-300">Month</button>
                <button x-on:click="openTab = 4" :class="{ 'bg-blue-600 text-white': openTab === 4 }" class="flex-1 py-2 px-4 rounded-md focus:outline-none transition-all duration-300">Year</button>
            </div>

            <div x-show="openTab === 1" class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md border-l-4 border-blue-600 w-full">
                {% include "meeting-times/day.njk" %}
            </div>
            <div x-show="openTab === 2" class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md border-l-4 border-blue-600 w-full">
                {% include "meeting-times/week.njk" %}
            </div>
            <div x-show="openTab === 3" class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md border-l-4 border-blue-600 w-full">
                {% include "meeting-times/month.njk" %}
            </div>
            <div x-show="openTab === 4" class="transition-all duration-300 bg-white p-4 rounded-lg shadow-md border-l-4 border-blue-600 w-full">
                {% include "meeting-times/year.njk" %}
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js" defer></script>

