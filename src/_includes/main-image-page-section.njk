{# src/_includes/main-image-page-section.njk - generated from user request #}
<!-- RIGHT TEMPLATE RAN -->
<div class="relative bg-white rounded-lg">
  <div class="mx-auto max-w-7xl lg:flex lg:justify-between lg:px-8 xl:justify-end">
      <div class="lg:flex lg:w-1/2 lg:shrink lg:grow-0 xl:absolute xl:inset-y-0 xl:right-1/2 xl:w-1/2">
            <div class="relative h-80 lg:-ml-8 lg:h-auto lg:w-full lg:grow xl:ml-0">
                    <img src="{{ item.landingMainImage or item.image or 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&crop=focalpoint&fp-x=.4&w=2560&h=3413&&q=80' }}" alt="{{ item.name }}" class="absolute inset-0 size-full bg-gray-50 object-cover dark:bg-gray-800" />
                          </div>
                              </div>
                                  <div class="px-6 lg:contents">
                                        <div class="mx-auto max-w-2xl pt-16 pb-24 sm:pt-20 sm:pb-32 lg:mr-0 lg:ml-8 lg:w-full lg:max-w-lg lg:flex-none lg:pt-32 xl:w-1/2">
                                                <p class="text-base/7 font-semibold text-{{ item.color }}-600 dark:text-{{ item.color }}-400">{{ item.tagline or item.subtitle or 'Feature' }}</p>
                                                        <h1 class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl dark:text-white">{{ item.headline or item.name }}</h1>
                                                                <p class="mt-6 text-xl/8 text-gray-700 dark:text-gray-300">{{ item.description or item.extra or '"' ~ item.name ~ '" â€” learn more about this section.' }}</p>
                                                                        <div class="mt-10 max-w-xl text-base/7 text-gray-600 lg:max-w-none dark:text-gray-400">
                                                                                  {% if item.blurb %}
                                                                                  <p>{{ item.blurb }}</p>
                                                                                  {% endif %}
                                                                                            {% if item.list and item.list | length %}
                                                                                            <ul role="list" class="mt-8 space-y-8 text-gray-600 dark:text-gray-400">
                                                                                                        {% for listItem in item.list %}
                                                                                                        <li class="flex gap-x-3">
                                                                                                                      <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="mt-1 size-5 flex-none text-{{ item.color }}-600 dark:text-{{ item.color }}-400">
                                                                                                                                      <path d="M5.5 17a4.5 4.5 0 0 1-1.44-8.765 4.5 4.5 0 0 1 8.302-3.046 3.5 3.5 0 0 1 4.504 4.272A4 4 0 0 1 15 17H5.5Zm3.75-2.75a.75.75 0 0 0 1.5 0V9.66l1.95 2.1a.75.75 0 1 0 1.1-1.02l-3.25-3.5a.75.75 0 0 0-1.1 0l-3.25 3.5a.75.75 0 1 0 1.1 1.02l1.95-2.1v4.59Z" clip-rule="evenodd" fill-rule="evenodd" />
                                                                                                                                                    </svg>
                                                                                                                                                                  <span>{{ listItem }}</span>
                                                                                                                                                                              </li>
                                                                                                        {% endfor %}
                                                                                                            </ul>
                                                                                                            {% endif %}
                                                                                                                                  {% if item.longText %}
                                                                                                                                  <p class="mt-8">{{ item.longText }}</p>
                                                                                                                                  {% endif %}
                                                                                                                                  {% if item.subheading %}
                                                                                                                                        <h2 class="mt-16 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ item.subheading }}</h2>
                                                                                                                                        <p class="mt-6">{{ item.subheadingText or '' }}</p>
                                                                                                                                  {% endif %}
                                                                                                                                        </div>
                                                                                                                                        </div>
                                                                                                                                                        </div>
                                                                                                                                                            </div>
