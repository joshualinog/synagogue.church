
	<div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
			{% for item in mainThree or [] %}
				<div class="overflow-hidden rounded-2xl bg-{{ item.color }}-50 p-4 lg:p-12">
					<div class="flex items-center text-{{ item.color }}-500">
			<p class="text-sm font-bold uppercase">{{ item.tagline }}</p>
			<svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
			</svg>
		  </div>
		  <h2 class="mt-4 text-3xl font-semibold text-slate-800">{{ item.short }}</h2>
		  <p class="mt-4 text-lg text-slate-600">{{ item.description }}</p>
		  <div class="mt-12 flex transform items-center justify-center transition-transform duration-150 ease-in-out hover:scale-125">
			<a href="{{ item.link }}" class="font-bold underline">{{ item.name }}</a>
		  </div>
		</div>
	  {% endfor %}
	</div>

