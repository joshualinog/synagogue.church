{% set leftContent %}
	<div class="pr-4">
		<p class="peer mb-6">{{ item.description }}</p>
		<p class="mb-6">{{ item.extra }}</p>
		<h3 class="mb-4 font-semibold text-xl">{{ item.tagline }}</h3>
			<ul role="list" class="marker:text-sky-400 list-disc pl-5 space-y-3 text-slate-500">
				{% for listItem in item.list %}
					<li>{{ listItem }}</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endset %}

{% set rightContent %}
	<div class="pl-6 relative flex items-end flex-col before:block before:absolute before:h-1/6 before:w-4 before:bg-{{ item.color }}-500 before:bottom-0 before:left-0 before:rounded-lg before:transition-all group-hover:before:bg-yellow-300 overflow-hidden">
	<div class="absolute top-0 left-0 bg-{{ item.color }}-500 bg-opacity-80 w-4/6 px-6 py-6 flex flex-col justify-center rounded-xl group-hover:bg-yellow-300 transition-all">
			<span class="block mb-6 font-bold text-{{ item.color }}-500 group-hover:text-black">{{ item.name }}</span>
		<h2 class="text-white font-bold text-3xl">{{ item.headline }}</h2>
		</div>
		<a class="font-bold text-sm flex mt-2 mb-8 items-center gap-2" href="{{ item.link }}">
			<span>MORE ABOUT US</span>
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
				<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
			</svg>
		</a>
		<div class="rounded-xl overflow-hidden">
			<img src="{{ item.landingMainImage or item.image or 'https://picsum.photos/800/800' }}" alt="">
		</div>
	</div>
{% endset %}

<div class="group grid w-full grid-cols-2">
	{% if side == 'left' %}
		{{ leftContent | safe }}
		{{ rightContent | safe }}
	{% else %}
		{{ rightContent | safe }}
		{{ leftContent | safe }}
	{% endif %}
</div>
